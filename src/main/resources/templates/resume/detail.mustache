<!-- 오른쪽 박스 -->

<input type="hidden" id="resumeId" value="{{models.id}}">
<div class="flex-fill" style="max-width: 75%">
	<div class="bg-white border rounded p-4">
		<div class="d-flex justify-content-between">
			<h4 class="fw-bold">이력서 상세보기</h4>
			<div class="d-flex align-items-center">
				{{#models.isCompanyUser}}
					{{#models.isScrap}}
						<div class="btn-wrap mt-1">
							<div class="toggle-btn">
								<i id="scrapIcon" class="fa fa-star" style="
                                        font-size: 24px;
                                        color: yellow;
                                        text-shadow: 0 0 1px #000, 0 0 1px #000;
                                  " onclick="deleteScrap({{models.scrapId}})"></i>
							</div>
						</div>
					{{/models.isScrap}}
					{{^models.isScrap}}
						<div class="btn-wrap mt-1">
							<div class="toggle-btn">
								<i id="scrapIcon" class="fa fa-star" style="
